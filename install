#!/usr/bin/env bash	

mkdir -p ~/bin/{gitapps,c,python,node}

sudo apt-get install -y apt-transport-https ca-certificates curl gnupg-agent software-properties-common

dpkg --add-architecture -y i386
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
sudo add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable"
add-apt-repository -y ppa:ppsspp/stable
wget -qO - https://download.sublimetext.com/sublimehq-pub.gpg | apt-key add -
echo "deb https://download.sublimetext.com/ apt/stable/" > /etc/apt/sources.list.d/sublime-text.list
add-apt-repository -y multiverse

wget -O discord.deb "https://discordapp.com/api/download?platform=linux&format=deb"

apt-get -y update
apt-get -y upgrade

sudo apt-get install -fy
git clone https://github.com/dpayne/cli-visualizer.git ~/bin/gitapps/
~/bin/gitapps/cli-visualizer/install.sh
git clone https://github.com/cmus/cmus.git ~/bin/gitapps/
cd ~/bin/gitapps/cmus
make
make install

apt-get install -y lightdm lxde nnn albert firefox mednafen ppsspp sublime-text gimp steam mpv gpick nethack-console screenfetch libfftw3-dev libncursesw5-dev cmake docker-ce docker-ce-cli containerd.io

dpkg -i ./discord.deb
sudo apt-get install -fy